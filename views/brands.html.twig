<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        <meta charset="utf-8">
        <title>Shoe Store | Home</title>
    </head>
    <body>
        <div class="jumbotron">
            <div class="container">
                <h1>List of All Brands</h1>
            </div>
        </div>
        <div class="container">
            {% if brands is not empty %}
                {% for brand in brands %}
                    <h3><a href="/brand/{{ brand.getId }}">{{ brand.getStoreName }}</a></h3>
                {% endfor %}
            {% else %}
                <h2>There aren't any brands yet :( Add some?</h2>
            {% endif %}

            <form class="" action="/brands" method="post">
                <label for="brand_name">Enter a Brand Name:</label>
                <input type="text" name="brand_name" placeholder="ex: Nordstrom">

                <label for="price_range">Price Range:</label>
                <input type="text" name="price_range" placeholder="ex: $, $$, $$$">

                <button class="btn btn-success" type="submit" name="button">Add Brand</button>
            </form>

            <form class="" action="/" method="get">
                <button class="btn btn-primary" type="submit" name="home">Back to Home</button>
            </form>
        </div>
    </body>
</html>
